{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/public/*": ["public/*"]
    },
    "checkJs": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "public/**/*",
    "tests/**/*",
    "*.js",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".vscode"
  ]
}